<?xml version="1.0" encoding="UTF-8"?>
<backup xmlns="http://jnphilipp.org/backup/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jnphilipp.org/backup/ http://jnphilipp.org/backup/backup.xsd">
    <options>
        <rsync root="yes">--delete --delete-excluded --stats --backup-dir=%s -abuchPpzz</rsync>
    </options>
    <scripts>
        <script id="1"><command>/home/user/Documents/some_script.sh</command></script>
        <script id="2"><command>/home/user/Downloads/cloud/other_script.sh</command></script>
    </scripts>
    <sources>
        <file root="yes">/home/jnphilipp/.backup/root.xml</file>
        <source>
            <path>/home</path>
            <exclude>.cache</exclude>
            <exclude>*.mkv</exclude>
        </source>
        <source>
            <path>/var/www</path>
            <pre_script>2</pre_script>
        </source>
        <source>
            <path>/var/www</path>
            <target>/media/backup2/</target>
            <post_script>1</post_script>
        </source>
        <source>
            <path host="some.server">/</path>
        </source>
    </sources>
    <databases>
        <file>dbs0.xml</file>
        <file>dbs1.xml</file>
        <postgresql>
            <db>
                <name>db_name</name>
                <user>USER</user>
                <password>PASSWORD</password>
                <options>OPTIONS</options>
                <ssh>USER@SERVER</ssh>
            </db>
            <db>
                <name>db_name</name>
                <user>USER</user>
                <pass>PASSWORD</pass>
                <options>OPTIONS</options>
            </db>
        </postgresql>
        <mysql>
            <db>
                <name>db_name</name>
                <user>USER</user>
                <password>PASSWORD</password>
                <options>OPTIONS</options>
                <ssh>USER@SERVER</ssh>
                <target>/media/backup/MySQL</target>
            </db>
            <db>
                <name>db_name</name>
                <user>USER</user>
                <pass>PASSWORD</pass>
                <options>OPTIONS</options>
                <target>/media/backup/MySQL</target>
            </db>
        </mysql>
    </databases>
    <pipeline>
        <step no="1">script-1</step>
        <step no="2">postgresql-dbs</step>
        <step no="3">mysql-dbs</step>
        <step no="4">script-2</step>
        <step no="5">backup</step>
    </pipeline>
</backup>
