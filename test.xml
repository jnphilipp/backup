<backup>
	<options>
		<option name="source">/</option>
		<option name="target">/media/backup</option>
		<option name="rsync_options">--delete -aucPz</option>
		<option name="delete_old_dumps">true</option>
		<option name="max_dumps">15</option>
	</options>
	<backup_files>
		<backup_file>/home/jnphilipp/Documents/Texte
			<exclude>epub</exclude>
			<exclude>*.odt</exclude>
		</backup_file>
		<backup_file>/home/jnphilipp/Documents/sons
			<exclude>'not importand'</exclude>
		</backup_file>
		<backup_file>/var/www
			<exclude>Library</exclude>
		</backup_file>
	</backup_files>
	<pipeline>
		<pipe name="2">backup</pipe>
	</pipeline>
</backup>