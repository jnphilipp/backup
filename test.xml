<backup>
	<options>
		<option name="source">/</option>
		<option name="target">/media/backup</option>
		<option name="rsync_options">--delete -aucPz</option>
	</options>
	<backup_files>
		<backup_file>/home/jnphilipp/Documents/Texte
			<exclude>epub</exclude>
			<exclude>*.odt</exclude>
		</backup_file>
		<backup_file>/home/jnphilipp/Documents/sons
			<exclude>'not importand'</exclude>
		</backup_file>
		<backup_file>/var/www
			<exclude>Library</exclude>
		</backup_file>
	</backup_files>
	<databases>
		<file>/home/jnphilipp/.backup/databases.xml</file>
		<postgresql>
			<db>
				<name>db_name</name>
				<user>USER</user>
				<password>PASSWORD</password>
				<options>OPTIONS</options>
				<ssh>USER@SERVER</ssh>
				<target>/media/backup/PostgreSQL</target>
			</db>
		</postgresql>
		<mysql>
			<db>
				<name>db_name</name>
				<user>USER</user>
				<password>PASSWORD</password>
				<options>OPTIONS</options>
				<ssh>USER@SERVER</ssh>
				<target>/media/backup/MySQL</target>
			</db>
		</mysql>
	</databases>
	<pipeline>
		<pipe name="1">db_dump</pipe>
		<pipe name="2">backup</pipe>
	</pipeline>
</backup>