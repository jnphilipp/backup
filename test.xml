<?xml version="1.0" encoding="UTF-8"?>
<psync xmlns="http://jnphilipp.org/psync/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jnphilipp.org/psync/ http://jnphilipp.org/psync/psync.xsd">
    <options>
        <option name="rsync_options">--delete -auPz</option>
        <option name="git" root="yes">no</option>
    </options>
    <sources>
        <source>
            <path>/home</path>
            <exclude>.cache</exclude>
            <exclude>*.mkv</exclude>
        </source>
        <source>
            <path>/var/www</path>
        </source>
        <source>
            <path>/var/www</path>
            <target>/media/backup2/</target>
        </source>
    </sources>
    <databases>
        <file>dbs0.xml</file>
        <file>dbs1.xml</file>
        <postgresql>
            <db>
                <name>db_name</name>
                <user>USER</user>
                <password>PASSWORD</password>
                <options>OPTIONS</options>
                <ssh>USER@SERVER</ssh>
            </db>
            <db>
                <name>db_name</name>
                <user>USER</user>
                <pass>PASSWORD</pass>
                <options>OPTIONS</options>
            </db>
        </postgresql>
        <mysql>
            <db>
                <name>db_name</name>
                <user>USER</user>
                <password>PASSWORD</password>
                <options>OPTIONS</options>
                <ssh>USER@SERVER</ssh>
                <target>/media/backup/MySQL</target>
            </db>
            <db>
                <name>db_name</name>
                <user>USER</user>
                <pass>PASSWORD</pass>
                <options>OPTIONS</options>
                <target>/media/backup/MySQL</target>
            </db>
        </mysql>
    </databases>
    <pipeline>
        <step no="1">db_dump</step>
        <step no="2">backup</step>
    </pipeline>
</psync>
